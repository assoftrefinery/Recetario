<div id="wrapper">
            <div id="headerwrap">
                <div id="header">
                  <span><%= image_tag("notepad_banner.jpg") %>
                                      <%= image_tag "logo.jpg", :width => 500, :height => 121 %></span>
                </div>
            </div>

            <div id="leftcolumnwrap">
              <div id="leftcolumn">
                    <div id='cssmenu'>
                      <ul>                     
						 <li><p align="left">Aun no tienes cuenta?</p><p><%= link_to "Creala ya!", signup_path %></p></li>
                        <li> <p> <%= link_to "Principal<<", root_path %></p></li>
                      </ul>
                    </div>
              </div>
             </div>

            <div id="contentwrap">
				<div id="content">
					<h1><p> Identificate </p></h1>
				</div>
				
                <div id="content">
                    
						<% flash.each do |k, v| %>
							<div class="<%= k %>"><%= v %></div>
						<% end %>


							<%= form_tag sessions_path do %>
							  <p>
								<%= label_tag :login, "Nombre de usuario o eMail" %><br /><br />
								<%= text_field_tag :login, params[:login] %>
							  </p>
							  <p>
								<%= label_tag :password , "Password" %><br /> <br />
								<%= password_field_tag :password %>
							  </p>
							  <p><%= submit_tag "Entrar" %></p>
							<% end %>
                </div>
            </div>

            <div id="footerwrap">
                  <div id="footer">
                    <%= image_tag "footer_banner.png", :width => 1000, :height => 40 %>
                  </div>
            </div>
</div>
