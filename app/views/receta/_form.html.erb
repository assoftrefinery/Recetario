<%= form_for(@recetum) do |f| %>

  <% if @recetum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recetum.errors.count, "error") %> ha impedido guardar esta receta:</h2>

      <ul>
      <% @recetum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>

    <% @recetum.autor = current_user.username %>
    <%= f.label :autor %><br />
    <%= f.text_field :autor  %>
    </p>
  </div>
  
  <div class="field">
    <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :ingredientes %><br />
    <%= f.text_area :ingredientes %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :preparacion %><br />
    <%= f.text_area :preparacion %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= f.label :inventor %><br />
    <%= f.text_field :inventor %>
    </p>
  </div>

  <div class="actions">
    <p>
    <%= f.submit "Crear receta"%>
    </p>
  </div>
<% end %>
