<div id="wrapper">
        <div id="headerwrap">
                <div id="header">
                  <span><%= image_tag("notepad_banner.jpg") %>
                                      <%= image_tag "logo.jpg", :width => 500, :height => 121 %></span>
                </div>
        </div>

        <div id="leftcolumnwrap">
             <div id="leftcolumn">
                <div id='cssmenu'>
                           <ul>
                              <li> <span> <% if logged_in? %>
                                    <p><%= link_to 'Nueva receta',  new_recetum_path %></p>
                                      <% else %>
                                          <p>Debes estar registrado para a√±adir recetas</p>
                                      <% end %></span></li>
                              <li> <p> <%= link_to "Principal<<", root_path %></p></li>
                           </ul>
                  </div>
             </div>
        </div>

                <div id="contentwrap">
                  <div id="content">
                    <h1><p>Lista de recetas</p></h1>


                  </div>

                  <div id="content">

                            <table>
                              <tr>
                                <th>Autor</th>
                                <th>Nombre</th>
                                <th>Ingredientes</th>
                                <th>Preparacion</th>
                                <th>Inventor</th>
                                <th>User</th>
                                <th></th>
                                <th></th>
                                <th></th>

                              </tr>



                              <% @receta.each do |recetum| %>

                                  <tr>

                                    <td><%= recetum.autor %></td>
                                    <td><%= recetum.nombre %></td>
                                    <td><%= recetum.ingredientes %></td>
                                    <td><%= recetum.preparacion %></td>
                                    <td><%= recetum.inventor %></td>
                                    <td><%= recetum.user_id %></td>

                                    <td><%= link_to image_tag("eye.png"), recetum %></td>

                                    <% if logged_in? %>
                                    <% if current_user.id == recetum.user_id %>
                                    <td><%= link_to  image_tag("application_edit.png"), edit_recetum_path(recetum) %></td>
                                    <td><%= link_to  image_tag("delete.png"), recetum, method: :delete, data: { confirm: 'Seguro que desea borrar la receta?' } %></td>
                                    <% end %>
                                        <% end %>

                                  </tr>

                             <% end %>

                            </table>
                  </div>
                </div>
				
				
				  <div id="footerwrap">
                  <div id="footer">
                    <%= image_tag "footer_banner.png", :width => 1000, :height => 40 %>
                  </div>
            </div>

</div>



